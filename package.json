{
  "name": "SMS-Management-Application-API",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/albert85/SMS-Management-Application-API.git",
  "author": "Olarewaju Temtope Albert <tmtpalbert@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start:dev": "nodemon --exec babel-node ./server/src/index.js",
    "build": "babel server/src --out-dir server/dist",
    "start": "node server/dist/index.js",
    "lint": "eslint server/src --fix",
    "test": "cross-env NODE_ENV=test yarn run db:migrate && jest --forceExit",
    "coverage": "cat coverage/lcov.info | coveralls",
    "db:migrate": "sequelize --config ./server/config/config.json --migrations-path ./server/migrations db:migrate:undo:all && sequelize --config ./server/config/config.json --migrations-path ./server/migrations db:migrate"
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-syntax-object-rest-spread": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.4.2",
    "@babel/runtime": "^7.4.3",
    "@types/jest": "^24.0.11",
    "babel-jest": "^24.7.1",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-preset-env": "^1.7.0",
    "body-parser": "^1.18.3",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "enzyme": "^3.9.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "faker": "^4.1.0",
    "morgan": "^1.9.1",
    "pg": "^7.9.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^5.2.12",
    "swagger-jsdoc": "^3.2.8",
    "swagger-ui-express": "^4.0.2"
  },
  "devDependencies": {
    "dotenv": "^7.0.0",
    "eslint": "^5.12.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jest": "^24.5.0",
    "nodemon": "^1.18.9",
    "nyc": "^13.3.0",
    "supertest": "^4.0.2"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html",
      "lcov",
      "text"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!server/src/index.js",
      "!**/node_modules/**",
      "!**/coverage/",
      "!server/migrations/**",
      "!server/models/index.js"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "server"
    ],
    "ext": "js ts",
    "ignore": [
      "*.test.ts",
      "*.test.js"
    ],
    "delay": "3",
    "execMap": {
      "ts": "ts-node"
    }
  }
}
